<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".Profiles.HouseOwners.HouseOwner"
    tools:ignore="SpeakableTextPresentCheck">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nato"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@id/edtTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:hint="Ex: 2BHK"
            android:paddingLeft="15dp"
            android:background="@drawable/customtext"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            app:layout_constraintBottom_toTopOf="@id/Description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/zen"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@id/edtdescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.132"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtTitle" />

        <EditText
            android:id="@+id/edtdescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:hint="Well Durnished"
            android:paddingLeft="15dp"
            android:minHeight="48dp"
            android:background="@drawable/customtext"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            app:layout_constraintBottom_toTopOf="@id/Email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Description" />

        <TextView
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/zen"
            android:text="Email"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/edtEmail"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtdescription" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="18dp"
            app:layout_constraintBottom_toTopOf="@id/phone"
            android:hint="HenryCavil@gmail.com"
            android:background="@drawable/customtext"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Email" />


        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/zen"
            android:text="Phone Number"
            app:layout_constraintBottom_toTopOf="@id/edtphone"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtEmail" />

        <EditText
            android:id="@+id/edtphone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:paddingLeft="15dp"
            android:hint="9818202928"
            android:background="@drawable/customtext"
            app:layout_constraintBottom_toTopOf="@id/location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/zen"
            android:text="Location"
            app:layout_constraintBottom_toTopOf="@id/edtLocation"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtphone" />

        <EditText
            android:id="@+id/edtLocation"
            android:layout_width="match_parent"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:hint="Kalanki"
            android:paddingLeft="15dp"
            android:background="@drawable/customtext"
            app:layout_constraintBottom_toTopOf="@id/price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/zen"
            android:text="Price"
            app:layout_constraintBottom_toTopOf="@id/edtPrice"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtLocation" />

        <EditText
            android:id="@+id/edtPrice"
            android:layout_width="match_parent"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:hint="2000"
            android:paddingLeft="15dp"
            android:background="@drawable/customtext"
            app:layout_constraintBottom_toTopOf="@id/tags"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/price" />

        <TextView
            android:id="@+id/tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/zen"
            android:text="AMENITIES"
            app:layout_constraintBottom_toTopOf="@id/rad1"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtPrice" />

        <CheckBox
            android:id="@+id/rad1"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/nato"
            app:layout_constraintTop_toBottomOf="@id/tags" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="95dp"
            android:fontFamily="@font/nato"
            android:paddingRight="70dp"
            android:text="Parking"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@id/rad1"
            app:layout_constraintStart_toEndOf="@id/I1"
            app:layout_constraintTop_toBottomOf="@id/tags" />

        <ImageView
            android:id="@+id/I1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/t1"
            android:src="@drawable/ic_baseline_directions_car_24"
            app:layout_constraintTop_toBottomOf="@id/tags"
            />


        <ImageView
            android:id="@+id/I2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_twotone_network_wifi_24"
            app:layout_constraintEnd_toStartOf="@id/t2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/I1" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="49dp"
            android:fontFamily="@font/nato"
            android:paddingRight="95dp"
            android:text="Internet"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@id/rad2"
            app:layout_constraintStart_toEndOf="@id/I2"
            app:layout_constraintTop_toBottomOf="@id/t1" />

        <CheckBox
            android:id="@+id/rad2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/zen"
            android:paddingLeft="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toEndOf="@id/t2"
            app:layout_constraintTop_toBottomOf="@id/rad1" />


        <ImageView
            android:id="@+id/pick"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toStartOf="@id/add"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/I2"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/ic_baseline_add_circle_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/pick"
            app:layout_constraintTop_toBottomOf="@id/rad2">

        </de.hdodenhof.circleimageview.CircleImageView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/done"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
            android:layout_marginTop="22dp"
            android:text="Post"
            android:background="@drawable/custom_button"
            android:textSize="20dp"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="35dp"
            app:layout_constraintStart_toEndOf="@id/Cancle"
            android:paddingBottom="5dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintTop_toBottomOf="@id/pick"
            tools:layout_editor_absoluteX="-50dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Cancle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pick"
            android:layout_marginTop="18dp"
            android:text="Cancel"
            android:textSize="20dp"
            android:layout_marginLeft="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="5dp"
            android:background="@drawable/custom_button1"
            android:layout_marginBottom="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/done"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>